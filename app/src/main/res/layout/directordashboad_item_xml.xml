<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/whitecolor_background"
   
    android:descendantFocusability="blocksDescendants"
    >
<RelativeLayout
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
           android:padding="@dimen/margin_5"
            android:orientation="vertical" 
            
            >

            <ImageView
                android:id="@+id/dir_item_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/logo_profile"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/dir_item_imagesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dir_item_images"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
               
                android:text="hello"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size10" />
        </LinearLayout>

        <TextView
            
            android:gravity="center"
            android:id="@+id/notificationCount"
            android:layout_width="@dimen/notification_bar_size"
            android:layout_height="@dimen/notification_bar_size"
            android:contentDescription="@string/app_name"
            android:text="1"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin_10"
            
            android:textColor="@color/red"
            android:background="@drawable/notification_bar"
            android:textSize="@dimen/text_size08"
            
            />
    </FrameLayout>
    </RelativeLayout>
</RelativeLayout>