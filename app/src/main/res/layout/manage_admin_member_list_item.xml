<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
      android:padding="@dimen/padding_5"
    android:orientation="horizontal"
    android:background="@color/white_color"
    android:layout_height="fill_parent" >





    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/member_profile_size"
            android:layout_height="@dimen/member_profile_size"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_profile"
            android:visibility="visible" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/prog"
            android:layout_width="@dimen/cross_image_sze"
            android:layout_height="@dimen/cross_image_sze"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageButton
         android:layout_centerVertical="true"
        android:id="@+id/cancel_btn"
        android:layout_marginRight="10dp"
        android:background="@drawable/cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:padding="@dimen/padding_10"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cancel_btn"
        android:layout_toRightOf="@id/relative"
        android:id="@+id/admin_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="iou iouj"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size16"
        android:textStyle="normal" />






  



</RelativeLayout>