<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:background="@color/white_color"
    android:gravity="center"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:clickable="false"
            android:gravity="left"
            android:padding="@dimen/padding_10"
            android:text="Reservation Details"
            android:textColor="@color/blue_header"
            android:textSize="@dimen/text_size18" />



        <LinearLayout
            android:background="@color/blue_header"
            android:layout_width="match_parent"
            android:layout_height="2dp"></LinearLayout>



        <TextView
            android:textSize="@dimen/text_size16"
            android:textColor="@color/black_color"
            android:text="Are you sure you want to delete this coach reservation?"
            android:padding="@dimen/padding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:hint="Enter a reason for deleting this lesson reservation"
            android:id="@+id/cancel_reason_msg_edittv"
            android:gravity="top|left"
            android:padding="@dimen/padding_5"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/black_border_back"
            android:maxLines="3"
            android:minLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal" >





            <TextView
                android:id="@+id/done_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue_header"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:textStyle="bold"
                android:text="@string/yes"
                android:textSize="@dimen/text_size18" />
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/gray_color" />


            <TextView
                android:id="@+id/cancel_dialog_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="@string/no"
                android:textColor="@color/blue_header"
                android:textSize="@dimen/text_size18" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>