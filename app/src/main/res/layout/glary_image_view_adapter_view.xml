    android:orientation="vertical" >
    <ImageView

        android:layout_margin="@dimen/margin_1"
         android:layout_width="@dimen/galary_thump_image_width"
        android:layout_height="@dimen/galary_thump_image_width"
        android:id="@+id/gallry_image_view_id"

        />
