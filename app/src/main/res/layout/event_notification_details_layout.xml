<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <com.clubscaddy.custumview.CustomScrollView
        android:id="@+id/custum_croll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="Event name : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_8"
                    android:text="Event name"
                    android:textColor="@color/white_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="Start Date : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_8"
                    android:text="Event name"
                    android:textColor="@color/white_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="End Date : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_8"
                    android:text="Event name"
                    android:textColor="@color/white_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="Deadline Date : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deadline_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_8"
                    android:text="Event name"
                    android:textColor="@color/white_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="Event Cost : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/event_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_8"
                    android:text="Event name"
                    android:textColor="@color/white_color" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/discription_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:padding="@dimen/padding_8"
                    android:text="Description : "
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:background="@drawable/white_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="left"
                    android:maxLines="8"
                    android:minLines="8"
                    android:padding="@dimen/padding_12"
                    android:scrollbars="vertical"
                    android:text="Description : "
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size12" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete_notification_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/red_circle_back"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingBottom="@dimen/padding_8"


                    android:text="Delete Notification"
                    android:textColor="@color/white_color" />

                <TextView
                    android:id="@+id/more_detail_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/dark_green_circle_back"
                    android:paddingLeft="@dimen/padding_8"
                    android:paddingRight="@dimen/padding_8"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingBottom="@dimen/padding_8"
                    android:text="More Details"
                    android:textColor="@color/white_color" />
            </LinearLayout>


        </LinearLayout>
    </com.clubscaddy.custumview.CustomScrollView>

</LinearLayout>