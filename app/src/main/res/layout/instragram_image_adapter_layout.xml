<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:layout_margin="@dimen/margin_1"
        android:background="@drawable/default_img"
        android:id="@+id/instragram_image_view"
        android:layout_width="@dimen/galary_thump_image_width"
        android:layout_height="@dimen/galary_thump_image_width" />



    <ProgressBar
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/image_loader_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />



</RelativeLayout>