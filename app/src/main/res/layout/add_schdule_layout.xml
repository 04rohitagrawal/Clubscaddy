<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:seekarc="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical">




   <ImageView
       android:id="@+id/submit_btn_iv"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="@dimen/margin_5"
       android:layout_alignParentBottom="true"
       android:background="@drawable/submit"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />




    <com.clubscaddy.custumview.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit_btn_iv"
        android:id="@+id/event_add"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >









        <LinearLayout
            android:layout_marginTop="@dimen/margin_15"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >







            <TextView
                android:layout_marginLeft="@dimen/margin_30"
                android:textColor="@color/white_color"
                android:text="League Name"
                android:textSize="@dimen/text_size16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/classfieb_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter league name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="@dimen/margin_20"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/text_size14" />











            <Button
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"

                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_30"
                android:id="@+id/add_match_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:text="Add Match"
                android:singleLine="true"
                android:padding="@dimen/padding_10"
                android:textColor="#000000"
                android:textSize="@dimen/text_size14" />

            <ListView
                android:dividerHeight="0.5dp"
                android:divider="@color/light_color"
                android:id="@+id/schdule_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>












        </LinearLayout>
    </com.clubscaddy.custumview.CustomScrollView>












</RelativeLayout>