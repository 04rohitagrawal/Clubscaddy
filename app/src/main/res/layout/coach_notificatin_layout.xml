<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/bg"
    android:orientation="vertical" >


    <EditText
        android:gravity="left|top"
        android:enabled="false"
        android:textSize="@dimen/text_size16"
        android:hint="Enter msg"
        android:padding="@dimen/margin_20"
        android:id="@+id/msg_edittxt"

        android:background="@drawable/white_circle_back"
        android:minLines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_color"
        />

        <TextView
            android:layout_margin="@dimen/margin_15"
            android:gravity="center"
            android:background="@drawable/red_circle_back"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/white_color"
            android:id="@+id/delete_notification_btn"
            android:textSize="@dimen/text_size14"
            android:text="Delete Notification"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/padding_8"
            android:paddingRight="@dimen/padding_8"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:layout_height="wrap_content"

            />




























</LinearLayout>
