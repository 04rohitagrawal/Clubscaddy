<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include

            layout="@layout/wizard_page_header">

        </include>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:text="Please select your play level"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size20" />


            <FrameLayout


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/white_circle_img_back"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_1">

                    <ImageView

                        android:id="@+id/profile_pic_imageview"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/default_club_profile"
                        android:scaleType="fitXY"
                        android:visibility="visible" />
                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/edittext_background"
                android:orientation="vertical"
                android:padding="@dimen/padding_5"

                >

                <Spinner
                    android:id="@+id/rate_list_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/down_arrow"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/continue_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_20"
                android:background="@drawable/white_circle_back1"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="Continue"
                android:textColor="@color/black_color" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>