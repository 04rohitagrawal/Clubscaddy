<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="1dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        >



        <ImageView


            android:id="@+id/image"
            android:layout_width="@dimen/galary_thump_image_width"
            android:layout_height="@dimen/galary_thump_image_width"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/delete_img_btn"
            android:layout_width="@dimen/cross_image_sze"
            android:layout_height="@dimen/cross_image_sze"
            android:layout_alignParentRight="true"
            android:background="@drawable/cancel"
            android:scaleType="fitXY" />

    </RelativeLayout>


</LinearLayout>
