<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >



    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/adminList_addAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/okbutton"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size18" />


      <LinearLayout
          android:layout_centerHorizontal="true"

          android:layout_alignParentTop="true"
          android:layout_above="@id/adminList_addAdmin"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <FrameLayout

              android:paddingBottom="@dimen/margin_40"
              android:layout_marginTop="@dimen/margin_10"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

              <ImageView
                  android:scaleType="fitXY"
                  android:layout_gravity="center_horizontal"
                  android:id="@+id/addadmin_profileImage"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/default_pic"


                  />

              <ImageButton
                  android:id="@+id/addadmin_pickfile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right|bottom"
                  android:background="@drawable/edit_btn"
                  android:contentDescription="@string/app_name" />



              <ProgressBar
                  android:id="@+id/progress_bar"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />


          </FrameLayout>



      </LinearLayout>





</RelativeLayout>