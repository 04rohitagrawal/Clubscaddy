<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_10"
    android:paddingLeft="@dimen/padding_5"
    android:paddingRight="@dimen/padding_5"
    android:background="@color/white_color"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView

        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size16"
        android:text="Member signup will get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView

        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/blue_header"
        android:textSize="@dimen/text_size16"
        android:text="5 points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size16"
        android:text="After than , Member will have package option.Member buy package for processing pts."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    <TextView
         android:layout_marginTop="@dimen/margin_20"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/blue_header"
        android:textSize="@dimen/text_size16"
        android:text="$10                              10pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/margin_20"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/blue_header"
        android:textSize="@dimen/text_size16"
        android:text="$20                              20pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="@dimen/margin_20"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/blue_header"
        android:textSize="@dimen/text_size16"
        android:text="$30                              30pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>