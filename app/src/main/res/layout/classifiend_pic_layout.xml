<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/gray_border_back"
         android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:id="@+id/classified_relative_layout"
        android:orientation="vertical">


        <ImageView
            android:padding="2dp"
            android:layout_margin="@dimen/margin_1"
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            />

        <ProgressBar
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/loader_progrss_bar"
            android:layout_width="@dimen/cross_image_sze"
            android:layout_height="@dimen/cross_image_sze" />


    </RelativeLayout>



</RelativeLayout>