<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    >


    <TextView
        android:id="@+id/tett"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_3"
        android:text="Version 2.1"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size18" />
    <ScrollView
        android:layout_below="@id/tett"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@drawable/logo_login"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_logo"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_40">

                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:id="@+id/ceter_view"
                        android:gravity="center_vertical"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size16"
                        android:text="Existing Customer"
                        android:textColor="@color/white_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_toLeftOf="@id/ceter_view"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@id/ceter_view"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>


                </RelativeLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/margin_5"

                    android:paddingLeft="@dimen/margin_20"

                    android:text="@string/login"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size20"

                    />

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"

                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="@dimen/padding_10"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/padding_8"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20"
                    android:paddingTop="@dimen/padding_8"

                    android:textColor="@color/white_edit_text_color"
                    android:textColorHint="#808080" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edittext_background"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/padding_10"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/padding_8"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20"
                    android:paddingTop="@dimen/padding_8"

                    android:textColor="@color/white_edit_text_color"
                    android:textColorHint="#808080" />

                <TextView
                    android:id="@+id/login_forgotpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"

                    android:paddingBottom="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_5"
                    android:text="@string/forgot_pw"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size14" />







                <TextView
                    android:id="@+id/login_loginBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/edittext_background"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_10"

                    android:text="@string/login"
                    android:textColor="@color/login_text_color"
                    android:textSize="@dimen/text_size16" />







                <LinearLayout

                    android:id="@+id/login_with_face_book_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/edittext_background"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/facebook_login"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:text="Login with Facebook"


                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size16" />


                </LinearLayout>



                <RelativeLayout

                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:id="@+id/ceter_view1"
                        android:gravity="center_vertical"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size16"
                        android:text="Future Customer"
                        android:textColor="@color/white_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_toLeftOf="@id/ceter_view1"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>



                    <LinearLayout

                        android:layout_toRightOf="@id/ceter_view1"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                </RelativeLayout>

                <TextView


                    android:id="@+id/sign_up_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_background"

                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="Try it"

                    android:textColor="@color/login_text_color"
                    android:textSize="@dimen/text_size16" />




                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/term_condtion_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@drawable/white_checkbox_selector"
                        android:checked="true"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_3"
                        android:text="Accept"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/term_use_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_3"
                        android:text=" Terms of Use"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_3"
                        android:text="And"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/privat_policy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_3"
                        android:text="Privacy policy"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size14" />
                </LinearLayout>








            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/bottom_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white_color"
        android:gravity="center"
        android:padding="@dimen/padding_3"
        android:text=" "
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size10" />

</RelativeLayout>