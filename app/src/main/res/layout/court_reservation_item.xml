<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/itemll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/court_slot"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="@color/time_tab_color"
            android:clickable="false"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/select_all"
            android:textColor="@color/blue_header"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/booking_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/grey_bg_color"
            android:drawableRight="@drawable/book_slot"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/select_all"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

</LinearLayout>