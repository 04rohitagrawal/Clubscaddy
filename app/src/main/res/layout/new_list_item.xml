<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front_customrow"
    style="@style/MyListFrontContent"
    android:background="@color/white_color"
    android:tag="front"
    android:padding="@dimen/padding_10"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/member_profile_size"
                android:layout_height="@dimen/member_profile_size"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/logo_profile"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/prog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_list_relativeLayout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:orientation="vertical"
            android:padding="@dimen/padding_5" >

            <TextView
                android:id="@+id/admin_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="iou iouj"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_list_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_list_name"
                android:layout_marginTop="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/admin_list_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_list_phone"
                android:layout_marginTop="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size14" />

            <CheckBox
                android:id="@+id/user_select_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="false" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>