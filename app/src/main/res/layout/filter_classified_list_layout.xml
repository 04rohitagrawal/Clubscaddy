<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:background="#546A9B"


    android:orientation="vertical">


    <RelativeLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/text_size16"
            android:padding="@dimen/padding_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Filtering"
            android:textColor="@color/black_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="Search"
        android:textSize="@dimen/text_size14"
        android:textColor="@color/white_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
               android:singleLine="true"
            android:id="@+id/search_edit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/white_circle_back"
            android:hint="Search..."
            android:padding="@dimen/padding_10" />


    </LinearLayout>








    <TextView
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="Price:"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size18"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





      <LinearLayout
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:ems="5"
               android:layout_marginLeft="@dimen/margin_20"
              android:gravity="center_vertical"
              android:text="Minimum  :"
              android:textColor="@color/white_color"
              android:textSize="@dimen/text_size18"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


          <EditText
              android:padding="@dimen/padding_10"
              android:id="@+id/minimum_price_edit_tv"
              android:background="@drawable/white_circle_back"
              android:inputType="number"
              android:singleLine="true"
              android:layout_marginLeft="@dimen/margin_5"
              android:textColor="@color/black_color"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/margin_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <TextView
        android:ems="5"

        android:text="Maximum :"
              android:textColor="@color/white_color"
              android:textSize="@dimen/text_size18"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


          <EditText
              android:textColor="@color/black_color"
              android:padding="@dimen/padding_10"

              android:id="@+id/maximum_price_edit_tv"
              android:background="@drawable/white_circle_back"
              android:inputType="number"
              android:singleLine="true"
              android:layout_marginLeft="@dimen/margin_5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />


      </LinearLayout>



















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_header"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/cancel"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size16" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white_color" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_header"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/done"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>












    </LinearLayout>




