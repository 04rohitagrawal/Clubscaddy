<?xml version="1.0" encoding="utf-8"?>






<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_8"
    android:paddingBottom="@dimen/padding_8"
    android:layout_height="wrap_content"

    android:orientation="vertical">



    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></LinearLayout>
        <RelativeLayout
            android:layout_weight="2.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.clubscaddy.custumview.CustomSpinner

                android:background="@drawable/gray_border_back"
                android:gravity="center"
                android:textColor="@color/blue_header"
                android:spinnerMode="dropdown"
                android:id="@+id/avail_list_spiiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/table_down_arrow"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/table_down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </LinearLayout>






        <TextView
            android:id="@+id/league_date_tv"
            android:textSize="@dimen/text_size11"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_weight="2"
            android:text="Date"
            android:layout_gravity="center_vertical"
            android:textStyle="normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />





        <TextView
            android:maxLines="2"
            android:id="@+id/league_location_tv"
            android:textSize="@dimen/text_size11"
            android:gravity="center"
            android:textColor="@color/blue_header"
            android:layout_weight="2.5"
            android:text="Location fsdf dssdhfdsgfd f"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




        <TextView
            android:maxLines="2"
            android:id="@+id/opponent_name_tv"
            android:textSize="@dimen/text_size11"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_weight="2.5"
            android:text="Location fsdf dssdhfdsgfd f"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>




    <LinearLayout
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_2"
        android:weightSum="20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




















        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
             android:id="@+id/yes_btn_linear_layout"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_2"
            android:background="@drawable/white_cap_back"
            >

            <TextView
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:id="@+id/total_yes_member_tv"
                android:gravity="center"
                android:background="@drawable/blue_circle_back"
                android:text="11"
                android:textSize="@dimen/text_size08"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />
            <TextView
                android:singleLine="true"
                android:textSize="@dimen/text_size08"
                android:textColor="@color/black_color"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>









        <LinearLayout
            android:layout_marginLeft="@dimen/margin_2"
            android:id="@+id/no_btn_linear_layout"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_2"
            android:background="@drawable/white_cap_back"
            >

            <TextView
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:id="@+id/total_no_member_tv"
                android:gravity="center"
                android:background="@drawable/blue_circle_back"
                android:text="11"
                android:textSize="@dimen/text_size08"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />
            <TextView
                android:singleLine="true"
                android:textSize="@dimen/text_size08"
                android:textColor="@color/black_color"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>




















        <LinearLayout
            android:id="@+id/total_maybe_btn_linear_layout"

            android:layout_marginLeft="@dimen/margin_2"
            android:layout_weight="3.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_2"
            android:background="@drawable/white_cap_back"
            >

            <TextView
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:gravity="center"
                android:background="@drawable/blue_circle_back"
                android:text="15"
                android:textSize="@dimen/text_size08"
                android:id="@+id/total_maybe_member_tv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />
            <TextView
                android:singleLine="true"
                android:textSize="@dimen/text_size08"
                android:textColor="@color/black_color"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:text="Maybe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>













        <LinearLayout
            android:layout_marginLeft="@dimen/margin_2"
            android:id="@+id/lastcall_btn_linear_layout"
            android:layout_weight="4.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_2"
            android:background="@drawable/white_cap_back"
            >

            <TextView
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:gravity="center"
                android:background="@drawable/blue_circle_back"
                android:text="15"
                android:id="@+id/total_lastcall_member_tv"
                android:textSize="@dimen/text_size08"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />
            <TextView
                android:singleLine="true"
                android:textSize="@dimen/text_size08"
                android:textColor="@color/black_color"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:text="Call Last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>







        <LinearLayout
            android:layout_marginLeft="@dimen/margin_2"
            android:id="@+id/norecoed_btn_linear_layout"
            android:layout_weight="5.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_2"
            android:background="@drawable/white_cap_back"
            >

            <TextView
                android:singleLine="true"
                android:id="@+id/total_not_responded_member_tv"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size08"
                android:gravity="center"
                android:background="@drawable/blue_circle_back"
                android:text="151"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />
            <TextView
                android:singleLine="true"
                android:textSize="@dimen/text_size08"
                android:textColor="@color/black_color"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:text="No Response"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>







    </LinearLayout>












</LinearLayout>