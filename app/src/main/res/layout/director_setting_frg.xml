<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <TextView
          android:layout_centerHorizontal="true"
        android:text="Version 3.0"
        android:id="@+id/vrsion_code_tv"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size16"
        android:layout_margin="@dimen/margin_10"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ScrollView
        android:layout_above="@+id/vrsion_code_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="vertical">


        <TextView
            android:id="@+id/change_club_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="Change club"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
            android:id="@+id/change_club_view"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />


        <TextView
            android:id="@+id/change_password_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/change_password"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />

        <TextView
            android:id="@+id/privacy_option_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/privacy_option"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />




        <TextView
            android:id="@+id/manage_reservation_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="Calendar settings"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color"
            android:visibility="visible" />



        <TextView
            android:id="@+id/change_club_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/change_club_message"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />

        <TextView
            android:id="@+id/manage_club_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/manage_club_logo_icon"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />


        <TextView
            android:id="@+id/manage_admin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/manage_admin"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />









        <View
            android:id="@+id/manage_admin_line"

            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />












        <TextView
            android:id="@+id/manage_coaches_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/manage_coach"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />


        <View
            android:id="@+id/manage_coaches_tv_line"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />














        <TextView
            android:id="@+id/classification_setting_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="Classified setting"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />


        <View
            android:id="@+id/classification_setting_view"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color"
            android:visibility="gone" />







        <TextView

            android:id="@+id/manage_support_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/manage_support_type"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />

        <View
            android:visibility="gone"
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />


        <TextView
            android:id="@+id/no_show_report_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="No show report"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
             android:id="@+id/no_show_report_tv_line"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />


        <TextView
            android:id="@+id/contact_support"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/contact_support"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />




        <TextView
            android:id="@+id/manage_autorenew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="App purchase status"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />







        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />

        <TextView
            android:id="@+id/contact_instragm_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="@string/contact_support"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />











        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />






        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/white_color"
            android:drawableRight="@drawable/next_arrow"
            android:padding="@dimen/margin_15"
            android:text="Logout"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size14" />

        <View

            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/gray_color" />








    </LinearLayout>
    </ScrollView>

</RelativeLayout>