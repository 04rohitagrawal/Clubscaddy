<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@color/blue_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header_tv"
            android:padding="@dimen/padding_10"
            android:text="Comments"
            android:textColor="@color/white_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/cross_btn_iv"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/cancel_icon_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/dialog_botton_view"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:orientation="horizontal"

                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"></LinearLayout>

            <RelativeLayout

                android:background="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/active_like_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_size18"

                    android:padding="@dimen/padding_10"
                    android:text="1 Like"
                    android:textColor="@color/blue_header" />


                <ImageView
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>





        <ListView
            android:divider="@color/divider_line_color"
            android:dividerHeight="0.5dp"
            android:layout_alignParentTop="true"
            android:id="@+id/like_cmnt_list_view"
            android:layout_width="match_parent"
            android:layout_above="@id/dialog_botton_view"
            android:layout_height="wrap_content"></ListView>



    </RelativeLayout>




</LinearLayout>