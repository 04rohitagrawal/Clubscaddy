<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <com.clubscaddy.custumview.CustomScrollView
        android:id="@+id/custum_croll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <!-- addadmin_profileImage -->
                <ImageView
                    android:id="@+id/addadmin_profileImage"
                    android:layout_width="@dimen/edit_profile_size"
                    android:layout_height="@dimen/edit_profile_size"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_img_profile" />

                <ImageButton
                    android:id="@+id/addadmin_pickfile"
                    android:layout_width="@dimen/edit_btn_size"
                    android:layout_height="@dimen/edit_btn_size"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/edit_btn"

                    android:contentDescription="@string/app_name" />

                <ProgressBar
                    android:id="@+id/prog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/clear_porfile_pic_btn"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white_color"
                android:padding="@dimen/padding_5"
                android:text="Clear Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/addadmin_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:padding="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_20"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <EditText
                    android:id="@+id/addadmin_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding_10"
                    android:inputType="textCapWords"

                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <EditText
                    android:id="@+id/addadmin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:enabled="true"
                    android:hint="@string/user_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <EditText
                    android:maxLength="12"

                    android:id="@+id/addadmin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/phone"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:padding="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />


                <EditText
                    android:id="@+id/linkedin_url_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/linkedin_link"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/padding_10"

                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <EditText
                    android:id="@+id/instagram_url_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/instramgram_link"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/padding_10"

                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <EditText
                    android:id="@+id/face_book_url_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/face_book_link"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/padding_10"

                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />


                <EditText
                    android:id="@+id/twitter_url_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/twitter_link"
                    android:imeOptions="actionDone"
                    android:padding="@dimen/padding_10"

                    android:paddingLeft="@dimen/margin_20"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />


                <TextView
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/padding_3"
                    android:id="@+id/discription_textview_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0/1000"
                    android:textColor="@color/white_color" />

                <EditText
                    android:maxLines="5"
                    android:id="@+id/addabout_url_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:gravity="top"
                    android:hint="@string/about"
                    android:imeOptions="actionDone"
                    android:maxLength="1000"
                    android:minLines="6"
                    android:paddingBottom="@dimen/padding_3"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_3"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />


                <LinearLayout
                    android:id="@+id/junior_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="@string/junior"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/white_color"
                        android:textSize="@dimen/text_size14" />

                    <ToggleButton
                        android:id="@+id/junior_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@drawable/junior"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Gender                :"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/white_color"

                        android:textSize="@dimen/text_size14" />

                    <ToggleButton
                        android:id="@+id/addadmin_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_weight="4"
                        android:background="@drawable/gender_xml"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/juniour_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:ems="4"
                        android:text="@string/junior"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/white_color"
                        android:textSize="@dimen/text_size14" />

                    <ToggleButton
                        android:id="@+id/juniour_seniour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_weight="4"
                        android:background="@drawable/junior"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rating_relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ratting_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level of play     : "
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/gray_color"
                        android:textSize="@dimen/text_size14" />

                    <RelativeLayout
                        android:id="@+id/ratting_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:orientation="horizontal">

                        <Spinner
                            android:background="@drawable/edittext_background"

                            android:id="@+id/rating_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_10"
                            android:hint="@string/sort_by"
                            android:imeOptions="actionNext"

                            android:inputType="text"
                            android:paddingBottom="@dimen/padding_5"
                            android:paddingRight="@dimen/margin_10"

                            android:paddingLeft="@dimen/margin_10"
                            android:paddingTop="@dimen/padding_5"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/gray_color"
                            android:textSize="@dimen/text_size14" />

                        <ImageButton
                            android:visibility="gone"
                            android:id="@+id/spinner_arrow_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_10"
                            android:background="@drawable/down_arrow" />

                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/adminList_addAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/okbutton"
                    android:gravity="center"
                    android:src="@drawable/okbutton"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size18" />
            </LinearLayout>
        </LinearLayout>

    </com.clubscaddy.custumview.CustomScrollView>
</LinearLayout>