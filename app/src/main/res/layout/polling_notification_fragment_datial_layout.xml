<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/delete_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:orientation="horizontal"
            android:weightSum="2" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <TextView
            android:id="@+id/polling_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:background="@drawable/whitecolor_background"
            android:padding="@dimen/padding_10"
            android:text="" />

        <LinearLayout
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:weightSum="4"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:id="@+id/yes_no_btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center_horizontal"
                 android:padding="@dimen/padding_5"
                android:layout_weight="2"
                android:id="@+id/delete_notification_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2"
                android:background="@drawable/red_circle_back"

                android:text="Delete"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_size14"
                android:id="@+id/yes_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_2"
                android:background="@drawable/green_circle_back"

                android:text="Yes"
                android:textColor="@color/white_color" />

            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_size14"
                android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_2"
                android:background="@drawable/red_circle_back"



                android:text="No"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answerBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green_selection_color"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="YES"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="NO"
                android:textColor="@color/white_color" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>