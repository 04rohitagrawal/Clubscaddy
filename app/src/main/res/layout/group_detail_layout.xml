<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="@drawable/bg"
    android:orientation="vertical" >
    

   <TextView 
       android:layout_marginTop="@dimen/margin_10"
       android:layout_marginLeft="@dimen/margin_10"
       android:textSize="@dimen/text_size14"
       android:textColor="@color/white_color"
       android:id="@+id/group_name_v_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Group Name"
       />
    
    <TextView 
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_below="@id/group_name_v_tv"
       android:textSize="@dimen/text_size18"
       android:textColor="@color/white_color"
       android:id="@+id/group_name_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      
       />
    
     <RelativeLayout
        android:paddingBottom="@dimen/padding_10"
         android:layout_marginLeft="@dimen/margin_30"
         android:layout_marginRight="@dimen/margin_30"
         android:id="@+id/bottom_layout"
         android:layout_alignParentBottom="true"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          >
         
         <TextView 
                android:layout_alignParentRight="true"
             android:id="@+id/edit_btn"
             android:textColor="@color/white_color"
             android:paddingTop="@dimen/padding_10"
             android:paddingBottom="@dimen/padding_10"
             android:paddingLeft="@dimen/margin_30"
             android:paddingRight="@dimen/margin_30"
             android:background="@color/green_selection_color"
             android:text="   Edit   "
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             />
          <TextView 
              android:id="@+id/delete_btn"
           
             android:textColor="@color/white_color"
             android:paddingTop="@dimen/padding_10"
             android:paddingBottom="@dimen/padding_10"
             android:paddingLeft="@dimen/margin_30"
             android:paddingRight="@dimen/margin_30"
             android:background="@color/red"
             android:text="Delete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             />
         
     </RelativeLayout>
     <ListView
         android:layout_marginTop="@dimen/margin_5"
       android:layout_marginBottom="@dimen/margin_5"
        android:id="@+id/member_list_view"
        android:layout_width="match_parent"
      android:visibility="visible"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/group_name_tv"
        
        android:divider="@color/gray_color"
        android:dividerHeight="0.5dp"
        android:listSelector="@null"
        android:scrollbars="none"
       />
    
    
   
</RelativeLayout>
