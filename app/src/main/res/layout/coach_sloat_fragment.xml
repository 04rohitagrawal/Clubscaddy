<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/coach_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/white_color"

        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="Date"
        android:textColor="@color/black_color" />




    <RelativeLayout
        android:id="@+id/linearLayout1"

        android:layout_below="@id/coach_name_tv"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView

            android:id="@+id/date_duration_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


 android:layout_centerVertical="true"

            android:gravity="center"

            android:text="Date"
            android:textColor="@color/black_color" />




        <ImageView
            android:padding="@dimen/padding_10"
            android:background="@null"
            android:id="@+id/privious_iv"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <ImageView
            android:padding="@dimen/padding_10"
            android:background="@null"
            android:id="@+id/next_iv"
            android:layout_alignParentRight="true"
            android:src="@drawable/back_oppsite"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>





    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottoms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/show_reservation_bottom_layout_width"
        android:background="@color/blue_header"
        android:gravity="center"

        android:orientation="horizontal"
        >

        <TextView

            android:id="@+id/cancelbottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_header"
            android:gravity="center"

            android:text="@string/cancel"
            android:textColor="@color/white_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white_color" />

        <TextView
            android:id="@+id/recursive_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_header"
            android:gravity="center"

            android:text="@string/recursive_booking"
            android:textColor="@color/white_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_color" />

        <TextView
            android:id="@+id/okbottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_header"
            android:gravity="center"

            android:text="@string/book"
            android:textColor="@color/white_color" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"

        android:orientation="vertical"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/coach_name_tv"
        android:layout_alignEnd="@+id/coach_name_tv">




    </LinearLayout>




    <LinearLayout
        android:layout_below="@id/linearLayout1"
        android:layout_above="@id/bottoms"
        android:orientation="vertical"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</RelativeLayout>