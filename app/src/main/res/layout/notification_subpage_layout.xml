<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <EditText
        android:id="@+id/msg_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/white_circle_back"
        android:enabled="false"
        android:gravity="center"
        android:hint="Enter msg"
        android:minLines="4"
        android:padding="@dimen/margin_20"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <TextView
            android:id="@+id/delete_notification_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1.5"
            android:background="@drawable/red_circle_back"
            android:gravity="center"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_3"
            android:paddingRight="@dimen/padding_3"
            android:text="Delete"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size14"

            />

        <TextView
            android:id="@+id/accept_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/green_circle_back"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_3"
            android:paddingRight="@dimen/padding_3"
            android:gravity="center"
            android:src="@null"
            android:text="Join"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/reject_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/red_circle_back"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_3"
            android:paddingRight="@dimen/padding_3"
            android:gravity="center"
            android:singleLine="true"
            android:src="@null"
            android:text="Accept"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size14" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Message"
            android:textColor="@color/white_color" />


        <EditText
            android:id="@+id/message_edit_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/edittext_background"

            android:gravity="left|top"

            android:maxLength="250"


            android:maxLines="4"

            android:minLines="5"
            android:padding="@dimen/padding_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:textColor="@color/white_edit_text_color" />


    </LinearLayout>


</LinearLayout>
