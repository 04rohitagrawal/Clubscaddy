<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/white_color"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_10"
    android:layout_height="wrap_content" >



     <RelativeLayout
         android:id="@+id/image_layout"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:layout_gravity="center_vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <ImageView
             android:scaleType="fitXY"
             android:id="@+id/image"
             android:layout_width="@dimen/member_profile_size"
             android:layout_height="@dimen/member_profile_size"
             android:layout_centerInParent="true"
             android:src="@drawable/default_img_profile"
             android:visibility="visible" />


         <ProgressBar
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:id="@+id/image_loader_progressbar"
             android:visibility="gone"
             android:layout_width="@dimen/cross_image_sze"
             android:layout_height="@dimen/cross_image_sze"
             android:layout_gravity="center" />


     </RelativeLayout>





    <ImageButton
        android:layout_centerVertical="true"
        android:id="@+id/cancel_btn"
        android:layout_marginRight="10dp"
        android:background="@drawable/cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:padding="@dimen/padding_10"
        android:layout_toLeftOf="@id/cancel_btn"
        android:layout_toRightOf="@id/image_layout"
        android:layout_centerVertical="true"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="iou fwfnds fsdfsdaf sdfsdhgfgsdhfs dfsdgfsdhgfsdghv shhjfgdsfgsda"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size16"
        android:textStyle="normal" />


</RelativeLayout>