<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="horizontal"
    android:padding="@dimen/padding_5"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/member_profile_size"
            android:layout_height="@dimen/member_profile_size"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_profile"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/prog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_list_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"


        android:orientation="vertical"
        android:padding="@dimen/padding_5">

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/admin_list_nextArrow"
            android:layout_width="@dimen/edit_btn_size"
            android:layout_height="@dimen/edit_btn_size"
            android:layout_alignParentRight="true"

            android:background="@drawable/cancel_image"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitXY" />





            <TextView
                android:padding="@dimen/padding_10"
                android:layout_toLeftOf="@id/admin_list_nextArrow"
                 android:layout_alignParentLeft="true"
                android:id="@+id/admin_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="iou iouj"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size16"
                android:textStyle="normal" />






    </RelativeLayout>
</LinearLayout>


