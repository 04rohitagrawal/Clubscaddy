<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include

            layout="@layout/wizard_page_header">

        </include>
    </LinearLayout>


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_30"
            android:text="Add Social Networks"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/facebook" />

            <EditText
                android:id="@+id/face_book_link_edit_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/white_circle_back1"
                android:hint="Enter facebook link"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size14"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/black_color" />

        </LinearLayout>








        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/linkedin" />

            <EditText
android:id="@+id/linkedin_edit_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@drawable/white_circle_back1"
                android:hint="Enter linkedin link"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size14"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/black_color" />

        </LinearLayout>














        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instagram" />

            <EditText
                android:id="@+id/instragram_edit_tv"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@drawable/white_circle_back1"
                android:hint="Enter instragram link"
                android:textSize="@dimen/text_size14"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/black_color" />

        </LinearLayout>










        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter" />

            <EditText
                android:id="@+id/twitter_edit_tv"
                android:singleLine="true"
                android:textSize="@dimen/text_size14"
                android:textColorHint="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@drawable/white_circle_back1"
                android:hint="Enter twitter link"

                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/black_color" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/continue_tv"
            android:background="@drawable/white_circle_back1"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="Continue"
            android:textColor="@color/black_color" />

    </LinearLayout>
  </ScrollView>

</LinearLayout>