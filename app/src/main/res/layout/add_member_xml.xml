<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <!-- addadmin_profileImage -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border_shdow"
                android:padding="@dimen/margin_1">

                <ImageView

                    android:id="@+id/addadmin_profileImage"
                    android:layout_width="@dimen/edit_profile_size"
                    android:layout_height="@dimen/edit_profile_size"

                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_img_profile" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/addadmin_pickfile"
                android:layout_width="@dimen/edit_btn_size"
                android:layout_height="@dimen/edit_btn_size"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/edit_btn"

                android:contentDescription="@string/app_name" />

            <ProgressBar
                android:id="@+id/prog"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addadmin_firstname"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:padding="@dimen/padding_10"
                android:paddingLeft="@dimen/margin_20"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/text_size14" />

            <EditText
                android:id="@+id/addadmin_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edittext_background"
                android:hint="@string/last_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:padding="@dimen/padding_10"
                android:paddingLeft="@dimen/margin_20"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/text_size14" />

            <EditText
                android:id="@+id/addadmin_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edittext_background"
                android:hint="@string/user_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_10"
                android:paddingLeft="@dimen/margin_20"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/text_size14" />

            <EditText
                android:maxLength="12"

                android:id="@+id/addadmin_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edittext_background"
                android:hint="@string/phone"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="@dimen/padding_10"
                android:paddingLeft="@dimen/margin_20"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/text_size14" />


            <LinearLayout
                android:id="@+id/juniour_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:orientation="horizontal"

                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="@string/junior"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/text_size14" />

                <ToggleButton
                    android:id="@+id/juniour_seniour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/junior"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="@string/gender"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/text_size14" />

                <ToggleButton
                    android:id="@+id/addadmin_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/gender_xml"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>


            <LinearLayout

                android:id="@+id/rating_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ratting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating:    "
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/text_size14" />

                <RelativeLayout
                    android:layout_width="@dimen/galary_thump_image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal">

                    <Spinner

                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@android:color/transparent"
                        android:hint="@string/sort_by"
                        android:imeOptions="actionNext"

                        android:inputType="text"
                        android:paddingBottom="@dimen/padding_5"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingTop="@dimen/padding_5"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/gray_color"
                        android:textSize="@dimen/text_size14" />

                    <ImageButton
                        android:id="@+id/spinner_arrow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@drawable/down_arrow" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/adminList_addAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/okbutton"
                android:gravity="center"
                android:src="@drawable/okbutton"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size18" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>