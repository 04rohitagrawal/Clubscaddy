<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   
    android:layout_height="wrap_content"
 android:background="@drawable/white_circle_back"
   android:paddingTop="@dimen/padding_10"
   android:paddingBottom="@dimen/padding_10"
    android:orientation="vertical" >
<TextView 
     android:textColor="@color/black_color"
    android:id="@+id/header"
   android:paddingTop="@dimen/padding_5"
   android:paddingBottom="@dimen/padding_5"
    android:gravity="center"
    android:textSize="15dp"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tannis club"
    />
<TextView 
     android:textColor="@color/black_color"
   
   android:paddingTop="@dimen/padding_3"
   android:paddingBottom="@dimen/padding_3"
    android:gravity="center"
    android:textSize="@dimen/text_size10"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="This is recursive reservation"
    />
<View 
    android:background="@color/green_bg_color"
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    />
    <ListView
        
       
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:choiceMode="singleChoice"
        android:divider="@color/gray_color"
        android:dividerHeight="0.2dp"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>